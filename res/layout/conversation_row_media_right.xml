<?xml version="1.0" encoding="utf-8"?>
<merge>
    <com.whatsapp.DividerView android:id="@id/date_divider" style="@style/DateDivider" />
    <LinearLayout android:orientation="0" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="40dp" android:layout_marginRight="9dp" android:layout_below="@id/date_divider" android:layout_alignParentRight="true"
        <LinearLayout android:gravity="50" android:orientation="0" android:layout_width="-2" android:layout_height="@dimen/media_message_thumb">
            <FrameLayout android:id="@id/thumb_frame" android:layout_width="@dimen/media_message_thumb" android:layout_height="@dimen/media_message_thumb">
                <ImageView android:id="@id/thumb" android:background="#00000000" android:layout_width="@dimen/media_message_thumb" android:layout_height="@dimen/media_message_thumb" android:scaleType="6" />
                <ImageView android:id="@id/video_overlay" android:background="@drawable/video_overlay_outgoing" android:visibility="2" android:layout_width="@dimen/media_message_thumb" android:layout_height="@dimen/media_message_thumb" android:scaleType="3" />
                <TextView android:textSize="12,5sp" android:textStyle="1" android:textColor="0x106000b" android:layout_gravity="50" android:id="@id/title" android:paddingLeft="6dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:visibility="2" android:layout_width="@dimen/media_message_thumb" android:layout_height="-2" android:lines="1" android:singleLine="true" android:drawablePadding="4dp" />
                <Button android:id="@id/thumb_button" android:background="@drawable/media_overlay_outgoing" android:layout_width="@dimen/media_message_thumb" android:layout_height="@dimen/media_message_thumb" android:scaleType="3" />
            </FrameLayout>
            <LinearLayout android:gravity="55" android:orientation="1" android:id="@id/button_frame" android:paddingTop="8dp" android:layout_width="-2" android:layout_height="-2"
                <LinearLayout android:gravity="10" android:layout_gravity="5" android:orientation="0" android:id="@id/conversation_layout_gravity_right_ar" android:padding="8dp" android:layout_width="-2" android:layout_height="-2">
                    <TextView android:layout_gravity="5" android:id="@id/date" android:layout_width="-2" android:layout_height="-2" style="@style/ConversationDate" />
                    <ImageView android:id="@id/status" android:paddingLeft="2dp" android:layout_width="-2" android:layout_height="-2" />
                </LinearLayout>
                <Button android:id="@id/control_btn" style="@style/ConversationControlButtonOutgoing" />
                <ProgressBar android:id="@id/progress_bar" android:visibility="2" style="@style/ConversationProgressBar" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</merge>
