                    <Button android:textSize="17sp" android:id="@id/registration_submit" android:layout_width="60dp" android:layout_height="-2" android:minHeight="0dp" android:text="@string/ok" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
