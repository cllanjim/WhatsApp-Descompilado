<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="1" android:layout_width="-1" android:layout_height="-1">
    <ScrollView android:id="@id/scroll_view" android:layout_width="-1" android:layout_height="-2">
        <LinearLayout android:orientation="1" android:padding="8dp" android:layout_width="-1" android:layout_height="-1"
            <LinearLayout android:orientation="1" android:background="@drawable/panel" android:layout_width="-1" android:layout_height="-2">
                <TextView android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingRight="12dp" android:paddingBottom="8dp" android:layout_width="-1" android:text="@string/register_sms_one_time" android:layout_weight="1.0" style="@style/Text.Description" />
            </LinearLayout>
            <LinearLayout android:orientation="1" android:background="@drawable/panel" android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="6dp">
                <TextView android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingRight="12dp" android:paddingBottom="0dp" android:layout_width="-1" android:text="@string/register_phone_number_code_confirm" android:layout_weight="1.0" style="@style/Text.Description" />
                <TextView android:gravity="3" android:id="@id/register_phone_country" android:visibility="2" android:layout_width="-1" android:layout_height="-2" style="@style/Text.FieldHeader" />
